<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/wish_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/wish_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/colorPrimary" />

            <TextView
                android:id="@+id/wish_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wish_image"
                android:text="Wish Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wish_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wish_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wish_image"
                android:text="abc@abc.com"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wish_user"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wish_image"
                android:text="14/11/1995"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wish_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wish_image"
                android:layout_marginTop="10dp"
                android:text="Dosage: 1"
                android:textSize="12sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/help_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Help"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>