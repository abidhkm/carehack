<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/whiteColor"
    tools:context="xyz.care.Care4U.LoginActivity"
    android:weightSum="1">

    <TextView android:id="@+id/link_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add New Medicines"
        android:gravity="center"
        android:textSize="26dip"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/wishTitle"
        android:hint="Medicine Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/link_signup"
        android:layout_alignParentStart="true">
        <requestFocus />
    </EditText>

    <EditText
    android:id="@+id/wishBody"
    android:layout_width="match_parent"
    android:layout_height="100dp"
        android:ems="10"
    android:hint="Available In Hand"
    android:inputType="text"
        android:layout_below="@+id/wishTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp">
    </EditText>

    <TextView
        android:id="@+id/editText"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wishTags"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="InTake per day"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <Spinner
        android:id="@+id/wishTags"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_below="@+id/wishBody"
        android:layout_marginStart="59dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/editText"
        android:ems="10"
        android:hint="Tags">

    </Spinner>

    <Button
        android:id="@+id/addWish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to List"
        android:background="@color/colorPrimary"
        android:textColor="@color/whiteColor"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@color/colorAccent"
        android:textColor="@color/whiteColor"
        android:layout_below="@+id/addWish"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />


</RelativeLayout>